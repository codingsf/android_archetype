<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:descendantFocusability="blocksDescendants"
              android:layout_height="wrap_content" android:id="@+id/m">

    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/adMainLayout" android:src="@drawable/placeholder" android:scaleType="fitXY"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent" android:id="@+id/x">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="酷游戏"
                        android:id="@+id/adName" android:layout_weight="1"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多》"
                        android:id="@+id/adMoreButn" android:layout_weight="0"/>
            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/textView3" android:layout_weight="1"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="0" android:id="@+id/applayout">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/adAppicon" android:src="@drawable/icon"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" android:layout_weight="1">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="冰雪奇缘"
                            android:id="@+id/adAppname"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1232545人觉得很酷"
                              android:id="@+id/adFavournumber"/>
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="动作手游"
                              android:id="@+id/adDetial" android:maxLines="2"/>
                </LinearLayout>
                <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Button"
                        android:focusable="false"
                        android:id="@+id/adInstail" android:layout_weight="0" android:padding="0dp"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>