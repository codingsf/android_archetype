<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="200dp" >

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单机游戏零流量"
                android:id="@+id/adName"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="1" android:id="@+id/adTips">
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更多》"
                android:id="@+id/adMoreButn" android:layout_weight="0"/>
    </LinearLayout>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/adShowImag" android:src="@drawable/dialog_error_icon" android:layout_weight="1"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="省时省力，省流量。淡季游戏满足你。巴拉巴拉扒拉啊大打算 阿斯达按时大"
            android:id="@+id/adShowText" android:minLines="2" android:layout_weight="0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日287万人安装。"
            android:id="@+id/adShowInstallNumber" android:layout_weight="0"/>
</LinearLayout>